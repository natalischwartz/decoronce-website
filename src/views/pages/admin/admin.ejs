<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN | Decoronce</title>
    <link rel="icon" href="/Imagenes/iconos/logo-decoronce-op2.png">
    

     <!--=============== REMIX ICONS ===============-->
     <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

    <!--Google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Raleway:wght@300&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="/css/styles.css">


</head>

<body>
    <%- include  ('../../partials/headerAdmin') %>
    
    <main>
        <div class="search-section">
            <img class="icon-size" src="/Imagenes/iconos/search_icon.svg" alt="icono buscar">
            <input type="text" placeholder="código, nombre o categoria" size="30">
        </div>
        <% if (mensaje) { %>
            <p  class="texto-alert" role="alert"><%= mensaje %></p>
        <% } %>
        <section class="list-section">
            <h1 class="section__title">LISTADO DE PRODUCTOS</h1>
            <div class="add-section">
                <h2 class="section__title">AGREGAR</h2>
                <a href="/products/create">
                    <span><iconify-icon class="plus-box" icon="ic:baseline-plus"></iconify-icon></span>
                </a>
            </div>
        </section>
        <section class="admin-table">
            <div class="admin-table__header">
                <p>ID</p>
                <p>Nombre del Producto</p>
                <p>Descripción</p>
                <p>Proveedor</p>
                <p>Acciones</p>
            </div>
            <% data.forEach(producto => { %> 
                <article class="admin-table__row">
                    <p class="about__description"><%= producto._id %></p>
                    <p class="about__description"><%= producto.name%></p>
                    <p class="about__description"><%= producto.description %></p>
                    <p class="about__description"><%= producto.provider %></p>
                    <div>
                        <a class="admin-table__btn-edit"  href="/products/edit/<%= producto._id %>"><iconify-icon icon="mdi:pencil" style="color: #1d84b5;"></iconify-icon></a>
                        <form action="/products/delete/<%= producto._id %>" method="POST">
                            <button onclick="return confirm('Esta seguro de eliminar')" class="admin-table__btn-delete" type="submit">
                                <iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon>
                            </button>
                        </form>
                    </div>
                </article> 
            <% }) %>
        </section>
    </main>    
    
    <%- include ('../../partials/footer') %>
    <!--Iconos-->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>


    <script src="/js/menu-mobile.js"></script>
</body>